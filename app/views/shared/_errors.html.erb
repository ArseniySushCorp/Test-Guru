<% if resource.present? && resource.errors.any? %>
  <div class="">
  <%= tag.div "", class: "errors resource-errors", data: { resource_id: resource.id } do %>
    <h4>Errors:</h4>
    <ul>
      <% resource.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
<% end %>